{% extends "layouts/default.njk" %}
{% block body %}

  <div class="wrapper">
    {% include "partials/header.njk" %}

    <section id="main">
      <div class="container">
        <header>
          <h2>Meus projetos ({{projects.length}})</h2>
          <div class="addon">
            <form action="/app/projects/create" method="post">
              <input type="text" name="title" placeholder="Novo projeto">
              <button type="submit" class="btn">
                <img src="/img/plus.svg">
              </button>
            </form>
          </div>
        </header>

        <section id="content">
          <div class="project-list">
          {% for project in projects %}
            <a href="/projects/{{project.id}}">{{project.title}}{{project.Section.length}}</a>
          {% endfor %}
            <a href="/projects">Exemplo de projeto</a>
            <a href="/projects">Outro projeto</a>
            <a href="/projects">Mais um projeto</a>
            <a href="/projects">Projeto exemplo</a>
          </div>
        </section>
      </div>
    </section>
  </div>

{% endblock %}
