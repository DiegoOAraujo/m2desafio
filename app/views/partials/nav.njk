
<section id="content">
  <nav>
    <div class="sessions">
    {% for section in sections %}
      <a href="/app/projects/{{activeProject}}/sections/{{section.id}}">{{section.title}}</a>
    {% endfor %}
    </div>

    <form action="/app/projects/{{activeProject}}/sections/create" method="post">
      <input type="text" name="title" placeholder="Nova seção">
      <input type="hidden" name="content">

      <button type="submit" class="btn"><img src="/img/plus.svg"></button>
    </form>
  </nav>
</section>
