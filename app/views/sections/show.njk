{% extends "layouts/default.njk" %}
{% block body %}

  <div class="wrapper">
    {% include "partials/header.njk" %}

    <section id="main">
      <div class="container">
        {% include "partials/project-header.njk" %}

        <section id="content">
          {% include "partials/nav.njk" %}

          <article>
            <div class="project-header">
              <h1>{{currentSection.title}}</h1>
              <form action="/app/projects/{{ activeProject }}/sections/{{ currentSection.id }}?_method=DELETE" method="POST">
                <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-trash"></span></button>
              </form>
              <button class="btn btn-info" data-modal-open="#edit-section"><span class="glyphicon glyphicon-pencil"></span></button>
              <a href="#">Editar seção</a>
            </div>
              {{currentSection.excerpt}}
          </article>
        </section>
      </div>
    </section>
    
    <div class="modal" id="edit-section">
      <form class="modal-content" method="POST" action="/app/projects/{{ activeProject }}/sections/{{ currentSection.id }}?_method=PUT">
        <input type="text" name="title" placeholder="Título da seção" value="{{ currentSection.title }}" />
        <div class="content-container">
            <textarea name="content" class="mde" placeholder="Conteúdo da seção" cols="60" rows="5">{{currentSection.content}}</textarea>
        </div>
        <button type="submit">SALVAR SEÇÃO</button>
        <a href="#" data-modal-close="#edit-section">CANCELAR</a>
      </form>
    </div>
  </div>

{% endblock %}
